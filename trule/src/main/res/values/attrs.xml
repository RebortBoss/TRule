<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TRule">
        <!--标尺开始显示位置(以小刻度为单位)-->
        <attr name="init_location" format="integer"/>
        <!--大刻度数、一个大刻度包含小刻度数、小刻度间隔宽度-->
        <attr name="big_scale_num" format="integer"/>
        <attr name="small_scale_num" format="integer"/>
        <attr name="small_scale_space" format="dimension"/>
        <!--中间线、大、小刻度高度、宽度-->
        <attr name="middle_line_height" format="dimension"/>
        <attr name="middle_line_width" format="dimension"/>
        <attr name="big_scale_height" format="dimension"/>
        <attr name="big_scale_width" format="dimension"/>
        <attr name="small_scale_height" format="dimension"/>
        <attr name="small_scale_width" format="dimension"/>
        <!--中间线、大、小刻度颜色-->
        <attr name="middle_line_color" format="color"/>
        <attr name="big_scale_color" format="color"/>
        <attr name="small_scale_color" format="color"/>

        <!--刻度字体大小、颜色以及是否选中-->
        <attr name="text_size" format="dimension"/>
        <attr name="text_size_choose" format="dimension"/>
        <attr name="text_color" format="color"/>
        <attr name="text_color_choose" format="color"/>
        <!--底部线颜色、高、底部线距离控件底部距离-->
        <attr name="bottom_color" format="color"/>
        <attr name="bottom_line_height" format="dimension"/>
        <attr name="to_bottom_height" format="dimension"/>


    </declare-styleable>

</resources>
